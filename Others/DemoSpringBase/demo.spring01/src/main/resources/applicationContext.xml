<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
			http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd
            http://www.springframework.org/schema/aop 
            http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">
	
	<!-- 扫描注解 -->
	<context:component-scan base-package="demo.spring01" ></context:component-scan>
	
	<!-- 1.配置数据库相关参数properties的属性：${url} -->
    <context:property-placeholder location="classpath:jdbc.properties"/>
    
    <!-- 启用@AsjectJ支持 -->
    <aop:aspectj-autoproxy />
	
	<bean id="ihelloService" class="demo.spring01.service.HelloService" >
		<property name="name" value="xuxuan"></property>
	</bean>
	
	<bean id="myLoggerAspect" class="demo.spring01.service.MyLoggerAspect"></bean>

	
	<aop:config>
   		 <aop:aspect id="loggerAspect" ref="myLoggerAspect">
            <aop:around method="record" pointcut="(execution(* demo.spring01.service..*Service.*(..)))"/>
        </aop:aspect>
    </aop:config>
</beans>
